<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleMVVMNotePad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_white</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- this for showing action mode on top of toolbar-->
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.Light" />
</resources>