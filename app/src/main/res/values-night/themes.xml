<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleMVVMNotePad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- this for showing action mode on top of toolbar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.Light" />
</resources>